@model X.PagedList.IPagedList<Shift>

@{
    Layout = "_DashboardLayout";
}

<style>
    .container-invoice {
        width: 95%;
        background-color: #f8f9fa;
    }

    .container-employee {
        padding-bottom: 6px !important;
    }

    .container-invoice .search {
        top: 6px;
        left: 10px;
    }

    .container-invoice .form-control {
        border: none;
        padding-left: 34px;
    }

        .container-invoice .form-control:focus {
            border: none;
            box-shadow: none;
        }

    .container-invoice .green {
        color: green;
    }

    .container-invoice .bill-id {
        text-decoration: none;
        color: #000;
    }

    .page-header {
        padding-top: 24px;
        padding-left: 32px;
    }

    .table-action tr:hover {
        background-color: #eee;
    }

    thead th a {
        text-decoration: none;
        color: #000000;
    }

    .table-action i:hover {
        opacity: 0.5;
    }
</style>

<div class="page-header text-primary">
    <div class="page-title">
        <h4>Shifts Management</h4>
    </div>
</div>

<div class="container container-lg mt-4 px-2 mb-4 container-invoice shadow-sm card">
    <div class="p-4 container-employee">
        <div class="mb-2 d-flex justify-content-between align-items-center">

            <div class="position-relative">
                <span class="position-absolute search text-primary"><i class="fa fa-search"></i></span>
                <input class="form-control w-100 fst-italic" placeholder="Search by id, name...">
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-responsive table-borderless table-action">
                <thead>
                    <tr class="bg-light">
                        <th scope="col" width="10%">
                            <a asp-action="Manage" asp-controller="Shift" asp-route-sortColumn="ID" asp-route-sortDirection="@ViewBag.NextSortDirection" asp-route-page="@ViewBag.PageNumber">
                                ID
                                @if (ViewBag.SortColumn == "ID")
                                {
                                    <i class="fa ms-2 m-auto @(ViewBag.SortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                }
                            </a>
                        </th>
                        <th scope="col" width="10%">
                            <a asp-action="Manage" asp-controller="Shift" asp-route-sortColumn="Date" asp-route-sortDirection="@ViewBag.NextSortDirection" asp-route-page="@ViewBag.PageNumber">
                                Date
                                @if (ViewBag.SortColumn == "Date")
                                {
                                    <i class="fa ms-2 m-auto @(ViewBag.SortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                }
                            </a>
                        </th>
                        <th scope="col" width="15%">
                            <a asp-action="Manage" asp-controller="Shift" asp-route-sortColumn="Doctor" asp-route-sortDirection="@ViewBag.NextSortDirection" asp-route-page="@ViewBag.PageNumber">
                                Doctor
                                @if (ViewBag.SortColumn == "Doctor")
                                {
                                    <i class="fa ms-2 m-auto @(ViewBag.SortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                }
                            </a>
                        </th>
                        <th scope="col" width="10%">
                            <a asp-action="Manage" asp-controller="Shift" asp-route-sortColumn="Doctor ID" asp-route-sortDirection="@ViewBag.NextSortDirection" asp-route-page="@ViewBag.PageNumber">
                                Doctor ID
                                @if (ViewBag.SortColumn == "Doctor ID")
                                {
                                    <i class="fa ms-2 m-auto @(ViewBag.SortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                }
                            </a>
                        </th>
                        <th scope="col" width="13%">Faculty</th>
                        <th scope="col" width="15%">Nurse</th>
                        <th scope="col" width="10%">Nurse ID</th>
                        <th scope="col" class="text-end" width="7%">Action</th>
                    </tr>
                </thead>

                <tbody style="font-size: 0.9rem !important;">
                    @{
                        foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.Id</td>
                                <td>@s.Date.ToString("dd/MM/yyyy")</td>
                                @{
                                    foreach (var d in ViewBag.Doctors)
                                    {
                                        if (d.Id == s.Doctorid)
                                        {
                                            <td><img src="@d.Avatar" width="16">    @d.Name</td>
                                            <td>@s.Doctorid</td>
                                            <td>@d.FacultyName</td>
                                        }
                                    }

                                    foreach (var n in ViewBag.Nurses)
                                    {
                                        if (n.Id == s.Nurseid)
                                        {
                                            <td><img src="@n.Avatar" width="16">   @n.Name</td>
                                            <td>@s.Doctorid</td>
                                        }
                                    }
                                }
                                <td class="text-end">
                                    <a href="@Url.Action("Edit", "Shift", new { id = s.Id })"><i class="fa fa-edit ms-2 text-primary"></i></a>
                                    <a href="@Url.Action("Delete", "Shift", new { id = s.Id })" onclick="return confirm('Are you sure you want to delete this shift?');"><i class="fa fa-trash ms-2 text-primary"></i></a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <!-- Pagination controls -->
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-md justify-content-center">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Manage", new { page = Model.PageNumber - 1, sortColumn = ViewBag.SortColumn, sortDirection = ViewBag.SortDirection })" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Manage", new { page = i, sortColumn = ViewBag.SortColumn, sortDirection = ViewBag.SortDirection })">@i</a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Manage", new { page = Model.PageNumber + 1, sortColumn = ViewBag.SortColumn, sortDirection = ViewBag.SortDirection })" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
        <a href="@Url.Action("Add", "Shift")" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-plus"></i></a>
    </div>
</div>