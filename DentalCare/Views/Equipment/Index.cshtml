@model X.PagedList.IPagedList<Equipment>

@{
    Layout = "_DashboardLayout";
}

<style>
    .container-invoice {
        width: 95% !important;
        background-color: #f8f9fa;
    }

    .container-employee {
        padding-bottom: 6px !important;
    }

    .container-invoice .search {
        width: 95% !important;
        top: 6px;
        left: 10px;
    }

    .container-invoice .form-control {
        border: none;
        padding-left: 34px;
    }

        .container-invoice .form-control:focus {
            border: none;
            box-shadow: none;
        }

    .container-invoice .green {
        color: green;
    }

    .container-invoice .bill-id {
        text-decoration: none;
        color: #000;
    }

    .page-header {
        padding-top: 24px;
        padding-left: 32px;
    }

    .table-action tr:hover {
        background-color: #eee;
    }

    .table-action i:hover {
        opacity: 0.5;
    }
</style>

<div class="page-header text-primary">
    <div class="page-title">
        <h4>Equipments Management</h4>
    </div>
</div>

<div class="container container-lg mt-4 px-2 mb-4 container-invoice shadow-sm card">
    <div class="p-4 container-employee">
        <div class="mb-2 d-flex justify-content-between align-items-center">
            <div class="position-relative">
                <span class="position-absolute search text-primary"><i class="fa fa-search"></i></span>
                <input class="form-control w-100 fst-italic" placeholder="Search by id, name...">
            </div>

            <a asp-action="AddType" asp-controller="Equipment" class="btn btn-light fw-bold">Add Type</a>
        </div>

        <div class="table-responsive">
            <table class="table table-responsive table-borderless table-action">
                <thead>
                <tr class="bg-light">
                    <th scope="col" width="15%">ID</th>
                    <th scope="col" width="15%">Type</th>
                    <th scope="col" width="15%">Name</th>
                    <th scope="col" width="15%">Unit</th>
                    <th scope="col" width="15%">Quantity</th>
                    <th scope="col" width="15%">Price</th>
                    <th scope="col" class="text-end" width="7%">Action</th>
                </tr>
                </thead>
                <tbody style="font-size: 0.9rem !important;">
                @{
                    if (Model != null)
                    {
                        foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.Id</td>
                                @{
                                    foreach (var t in ViewBag.Types)
                                    {
                                        if (s.Equipmenttypeid.Equals(t.Id))
                                        {
                                            <td>@t.Name</td>
                                        }
                                    }
                                }
                                    <td>@s.Name</td>
                                <td>@s.Unit</td>
                                <td>@s.Quantity</td>
                                <td>@s.Price</td>
                                <td class="text-end">
                                    <a href="@Url.Action("Edit", "Equipment", new { id = s.Id })"><i class="fa fa-edit ms-2 text-primary"></i></a>
                                    <a href="@Url.Action("Delete", "Equipment", new { id = s.Id })" onclick="return confirm('Are you sure you want to delete this medicine?');"><i class="fa fa-trash ms-2 text-primary"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {

                    }
                }
                </tbody>
            </table>
            <a href="@Url.Action("Add", "Equipment")" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-plus"></i></a>
        </div>
        <!-- Pagination controls -->
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-md justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>