@{
    Layout = "_DashboardLayout";
}

<style>

    .add-invoice .content {
        padding: 20px;
        width: 100% !important;
        margin-left: 0 !important;
    }

    .add-invoice .content label {
        padding-left: 2px !important;
    }

    .add-invoice .card-body {
        background-color: #f8f9fa;
    }

    .add-invoice .card {
        width: 100% !important;
    }
</style>


<div class="container-fluid mt-4 add-invoice">
    <!-- Use container-fluid or container for better alignment -->
    <div class="content">
        <div class="page-header mb-4">
            <div class="page-title text-primary">
                <h4>Change Password</h4>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <form>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="pt-1 pb-2" for="address">Old Password</label>
                            <input type="password" id="address" class="form-control">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="pt-3 pb-2" for="address">New Password</label>
                            <input type="password" id="address" class="form-control">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label class="pt-3 pb-2" for="address">Confirm Password</label>
                            <input type="password" id="address" class="form-control">
                        </div>
                    </div>
                    <div class="col-12 d-flex flex-wrap align-items-end" style="height: 50% !important;">
                        <div class="form-group col-12 col-md-10">
                            <label class="pt-3 pb-2" for="address">OTP</label>
                            <input type="text" id="address" class="form-control">
                        </div>
                        <div class="otp col-12 col-md-2 d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary w-100">Send OTP</button>
                        </div>
                    </div>


                    <div class="col-lg-12 text-end pt-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>